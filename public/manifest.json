{
	"manifest_version": 3,
	"name": "Gmail Automation",
	"version": "1.0.2",
	"description": "Automate filling and sending emails in Gmail",
	"permissions": ["activeTab", "storage", "downloads"],
	"host_permissions": ["https://mail.google.com/*"],
	"web_accessible_resources": [
		{
			"resources": ["templates/*", "plugin/*"],
			"matches": ["https://mail.google.com/*"]
		}
	],
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"js": ["js/xlsx.full.min.js", "js/content.js"]
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon16.svg",
			"48": "icons/icon48.svg",
			"128": "icons/icon128.svg"
		}
	},
	"icons": {
		"16": "icons/icon16.svg",
		"48": "icons/icon48.svg",
		"128": "icons/icon128.svg"
	}
}
