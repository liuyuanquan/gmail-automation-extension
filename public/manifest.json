{
	"manifest_version": 3,
	"name": "Gmail Automation",
	"version": "1.0.3",
	"description": "Automate filling and sending emails in Gmail",
	"minimum_chrome_version": "88",
	"permissions": ["downloads"],
	"host_permissions": ["https://mail.google.com/*"],
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"js": ["js/xlsx.full.min.js", "js/content.js"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "Gmail Automation"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
