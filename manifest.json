{
	"manifest_version": 3,
	"name": "Gmail Automation",
	"version": "1.0.0",
	"description": "Automate filling and sending emails in Gmail",
	"permissions": ["activeTab", "storage"],
	"host_permissions": ["https://mail.google.com/*"],
	"web_accessible_resources": [
		{
			"resources": ["templates/*"],
			"matches": ["https://mail.google.com/*"]
		}
	],
	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"js": ["xlsx.full.min.js", "dist/content.js"],
			"css": ["dist/content.css"]
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
